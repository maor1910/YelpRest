<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit <%= restaurant.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST" class="form-horizontal">
			<div class="form-group">
				<input type="text" name="restaurant[name]" value="<%=restaurant.name%>" class="form-control">
			<div class="form-group">
                <input class="form-control" type="number" name="restaurant[price]" value="<%= restaurant.price %>" min="0.01" step="0.01">
            </div>
			</div>
			<div class="form-group">
				<input type="text" name="restaurant[image]" value="<%=restaurant.image%>" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" name="restaurant[description]" value="<%=restaurant.description%>" class="form-control">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">submit</button>
			</div>
			</form>
			<a href="/restaurants">Go Back</a>	
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>