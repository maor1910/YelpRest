<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a new restaurant</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/restaurants" method="POST" class="form-horizontal">
				<div class="form-group">
					<input type="text" name="name" placeholder="name" class="form-control">
				</div>
				<div class="form-group">
					<input type="number" name="price" placeholder="price range" class="form-control" min="0.01" step="0.01">
				</div>	
				<div class="form-group">
					<input type="text" name="image" placeholder="image url" class="form-control">
				</div>
				<div class="form-group">
					<input type="text" name="description" placeholder="description" class="form-control">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">submit</button>
				</div>
			</form>
			<a href="/restaurants">Go Back</a>	
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>