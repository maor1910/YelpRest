<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Comment</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/restaurants/<%= restaurant_id %>/comments/<%= comment.id %>?_method=PUT" method="POST" class="form-horizontal">
			<div class="form-group">
				<input type="text" name="comment[text]" value= "<%= comment.text %>" class="form-control">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">submit</button>
			</div>
			</form>
			<a href="/restaurants/<%= restaurant_id %>">Go Back</a>	
		</div>
		
	</div>
</div>

